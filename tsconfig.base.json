      "@open-uap/dtos": ["libs/common/dtos/src/index.ts"],
      "@open-uap/feature-home": ["libs/web/home/feature/src/index.ts"],
      "@open-uap/ui-home": ["libs/web/home/ui/src/index.ts"],
      "@open-uap/util-home": ["libs/web/home/util/src/index.ts"]
